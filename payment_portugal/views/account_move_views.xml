<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <!-- Sales invoice form -->
    <record id="view_move_form_payment_pt" model="ir.ui.view">
        <field name="name">account.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <!-- Add a tab for transactions -->
            <xpath expr="//notebook" position="inside">
                <page
                    name="transactions"
                    string="Transactions"
                    attrs="{'invisible': ['|', ('transaction_ids', '=', False),
                      ('move_type', '!=', 'out_invoice')]}"
                >
                    <field name="transaction_ids" nolabel="1">
                        <tree
                            decoration-info="state == 'pending'"
                            decoration-muted="state == 'cancel'"
                        >
                            <field name="reference" string="Internal Reference" />
                            <field name="acquirer_id" string="Acquirer" />
                            <field name="multibanco_entity" string="Entity" />
                            <field name="acquirer_reference" string="Reference" />
                            <field name="last_state_change" />
                            <field name="amount" />
                            <field name="fees" />
                            <field name="state" />
                        </tree>
                    </field>
                </page>
            </xpath>

        </field>
    </record>

</odoo>
