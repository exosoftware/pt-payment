<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Sales invoice form -->
    <record id="view_move_form" model="ir.ui.view">
        <field name="name">account.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <!-- Add a tab for transactions -->
            <xpath expr="//notebook" position="inside">
                <page
                    name="transactions"
                    string="Transactions"
                    invisible="not transaction_ids or move_type != 'out_invoice'"
                >
                    <field name="transaction_ids" nolabel="1">
                        <list
                            decoration-info="state == 'pending'"
                            decoration-muted="state == 'cancel'"
                        >
                            <field name="reference" string="Internal Reference" />
                            <field name="multibanco_entity" string="Entity" />
                            <!--FIXME-->
                            <!--<field name="problem_description" string="Reference" />-->
                            <field name="create_date" />
                            <field name="amount" />
                            <field name="multibanco_limit_date" string="Limit Date" />
                            <!--FIXME-->
                            <!--<field name="fees" />-->
                            <field name="state" />
                        </list>
                    </field>
                </page>
            </xpath>

            <group id="header_left_group" position="inside">
                <field
                    name="l10n_pt_mb_payment_provider"
                    readonly="state in ['posted', 'cancel']"
                    invisible="move_type not in ('out_invoice', 'out_refund', 'out_receipt')"
                />
            </group>
        </field>
    </record>
</odoo>
