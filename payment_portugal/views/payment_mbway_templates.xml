<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="mbway_form" name="MB WAY Form">
        <t t-call="website.layout">
            <div class="text-center">
                <br/>
                <br/>
                <br/>
                <p class="o_default_snippet_text">Please insert your mobile phone number and <i>Submit</i>. You'll be able to use your MB WAY app to complete the payment.</p>
            </div>
            <form class="oe_login_form o_mark_required" role="mbway_form" t-attf-action="/payment/eupago/mbway/feedback" method="post">

                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                <input type="hidden" name="reference" t-att-value="reference"/>
                <input type="hidden" name="currency" t-att-value="currency"/>

                <div class="s_website_form_rows row">
                    <label for="alias" class="col-form-label col-sm-auto s_website_form_label">Phone Number</label>
                    <div class="col-sm">
                        <input type="text" placeholder="Phone Number" name="alias" t-att-value="alias" id="alias" t-attf-class="form-control #{'form-control-sm' if form_small else ''}" required="required" autofocus="autofocus" autocapitalize="off"/>
                    </div>
                </div>

                <br></br>

                 <div class="s_website_form_rows row">
                    <label for="alias" class="col-form-label col-sm-auto s_website_form_label">Amount: </label>
                    <div>
                        <input type="text" name="amount" t-attf-class="form-control #{'form-control-sm' if form_small else ''}" t-att-value="amount" readonly="readonly"/>
                    </div>
                 </div>

                <br></br>
                <p class="alert alert-danger" t-if="error" role="alert">
                    <t t-esc="error"/>
                </p>

                <div t-attf-class="clearfix oe_login_buttons text-center mb-1 {{'pt-2' if form_small else 'pt-3'}}">
                    <button type="submit" class="btn btn-primary btn-block">Submit</button>
                </div>
            </form>
        </t>
    </template>
</odoo>
