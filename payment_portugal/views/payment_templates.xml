<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <template id="multibanco_form">
        <input
            type="hidden"
            name="data_set"
            t-att-data-action-url="tx_url"
            data-remove-me=""
        />
        <t t-if="return_url">
            <input type="hidden" name='return_url' t-att-value='return_url' />
        </t>
        <input type="hidden" name='reference' t-att-value='reference' />
        <input type="hidden" name='amount' t-att-value='amount' />
        <input type="hidden" name='currency' t-att-value='currency.name' />
    </template>

    <template
        id="payment_confirmation_status_multibanco"
        inherit_id="website_sale.payment_confirmation_status"
    >
        <xpath
            expr="//t[@t-raw='payment_tx_id.acquirer_id.pending_msg']"
            position="attributes"
        >
            <attribute
                name="t-raw"
            >payment_tx_id.get_pending_message_to_display()</attribute>
        </xpath>
    </template>

    <template
        id="payment_confirmation_status_multibanco_portal"
        inherit_id="payment.payment_confirmation_status"
    >
        <xpath
            expr="//span[@t-if='payment_tx_id.acquirer_id.pending_msg']"
            position="attributes"
        >
            <attribute
                name="t-raw"
            >payment_tx_id.get_pending_message_to_display()</attribute>
        </xpath>
    </template>

</odoo>
