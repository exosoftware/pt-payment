<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="provider_form_eupago" model="ir.ui.view">
        <field name="name">provider.form.eupago</field>
        <field name="model">payment.provider</field>
        <field name="inherit_id" ref="payment_portugal.provider_form_portugal" />
        <field name="arch" type="xml">
            <field name="pt_pay_method" position="after">

                <field
                    name="eupago_client_id"
                    attrs="{'required':[('provider', '=', 'eupago'), ('state', '!=', 'disabled')],
                        'invisible':[('provider', '!=', 'eupago')]}"
                />
                <field
                    name="eupago_client_secret"
                    password="True"
                    attrs="{'required':[('provider', '=', 'eupago'), ('state', '!=', 'disabled')],
                        'invisible':[('provider', '!=', 'eupago')]}"
                />
                <field
                    name="eupago_api_key"
                    password="True"
                    attrs="{'required':[('provider', '=', 'eupago'), ('state', '!=', 'disabled')],
                    'invisible':[('provider', '!=', 'eupago')]}"
                />
                <field
                    name="pt_validity_days"
                    attrs="{'invisible': [('provider', '!=', 'eupago'), ('pt_pay_method', '!=', 'mb')]}"
                />
                <field
                    name="pt_callback_url"
                    attrs="{'invisible':[('provider', '!=', 'eupago')]}"
                />
            </field>
        </field>
    </record>

</odoo>
